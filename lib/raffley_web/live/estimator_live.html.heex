<div class="estimator">
  <h1>Raffle Estimator</h1>
  <section>
    <button phx-click="add" phx-value-qty="5">
      +
    </button>

    <div>
      {@tickets}
    </div>
    @
    <div>
      € {@price}
    </div>
    =
    <div>
      € {@tickets * @price}
    </div>
  </section>

  <form phx-submit="set-price">
    <label for="">Ticket Price:</label>
    <input type="number" name="price" value={@price} />
  </form>
</div>
