<div class="effort">
  <h1>Community Love</h1>

  <section>
    <button phx-click="add" phx-value-amount="3">
      +3
    </button>

    <div>
      {@responders}
    </div>
    &times;
    <div>
      {@minutes_per_responder}
    </div>
    =
    <div>
      {@responders * @minutes_per_responder}
    </div>
  </section>
</div>
